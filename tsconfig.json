{
    "compilerOptions": {
        "target": "ES2021",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "types": ["node"],
        "typeRoots": ["./node_modules/@types"]
    },
    "include": ["src/**/*"],
    "exclude": ["src/test/**", "node_modules", "dist/*", "types"]
  }